<h1>New product</h1>

<% form_for(@product, :html=> {:multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

	<p>
		<%= f.label :price %><br />
		<%= f.text_field :price %>
	</p>
	<p>
    <%= f.label :picture %><br />
    <%= file_field_tag :picture_file %>
		<span class="hint"> 
			We accept JPEG, GIF, or PNG files up to 500 KB. 
		</span> 

  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>